<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- 1. LOGIN -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.cinephile.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- 2. MAIN TABS -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cinephile.ui.home.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.cinephile.ui.search.SearchFragment"
        android:label="Search" />

    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.cinephile.ui.quiz.QuizFragment"
        android:label="Quiz" />

    <!-- 3. PROFILE TAB -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.cinephile.ProfileFragment"
        android:label="Profile">

        <!-- Action to open Watchlist Manager -->
        <action
            android:id="@+id/action_profileFragment_to_watchlistFragment"
            app:destination="@id/watchlistFragment" />

        <!-- Action to open Settings -->
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />

        <!-- Action to open Favorites -->
        <action
            android:id="@+id/action_profileFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
    </fragment>

    <!-- 4. WATCHLIST FLOW (Manager -> Details) -->

    <!-- SCREEN A: The Manager (List of your lists) -->
    <fragment
        android:id="@+id/watchlistFragment"
        android:name="com.example.cinephile.ui.watchlist.WatchlistFragment"
        android:label="My Watchlists"
        tools:layout="@layout/fragment_watchlist_manager">

        <!-- Click a list -> Go to details -->
        <action
            android:id="@+id/action_watchlistFragment_to_watchlistDetailFragment"
            app:destination="@id/watchlistDetailFragment" />
    </fragment>

    <!-- SCREEN B: The Details (Grid of movies in that list) -->
    <fragment
        android:id="@+id/watchlistDetailFragment"
        android:name="com.example.cinephile.ui.watchlist.WatchlistDetailFragment"
        android:label="Watchlist Details"
        tools:layout="@layout/fragment_watchlist">

        <!-- Arguments to know which list to load -->
        <argument
            android:name="listId"
            app:argType="long"
            android:defaultValue="0L" />
        <argument
            android:name="listName"
            app:argType="string"
            android:defaultValue="Watchlist" />
    </fragment>

    <!-- 5. OTHER SUB-SCREENS -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.cinephile.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">

        <!-- ACTION: Go to Login and clear history so they can't go back -->
        <action
            android:id="@+id/action_settingsFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.cinephile.ui.favorites.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" />

    <!-- 6. MOVIE DETAILS SCREEN -->
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.cinephile.ui.details.DetailsFragment"
        android:label="Movie Details"
        tools:layout="@layout/fragment_details">

        <argument
            android:name="movieId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <!-- GLOBAL ACTION -->
    <action
        android:id="@+id/action_global_detailsFragment"
        app:destination="@id/detailsFragment" />

</navigation>