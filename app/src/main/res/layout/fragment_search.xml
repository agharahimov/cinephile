<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- 1. SEARCH BAR AREA -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etSearchQuery"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_glass"
            android:hint="Search movies..."
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="text"
            android:imeOptions="actionSearch"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            app:icon="@android:drawable/ic_menu_search"
            app:iconGravity="textStart"
            app:cornerRadius="25dp"
            android:backgroundTint="#6200EE"
            android:text=""/>
    </LinearLayout>

    <!-- 2. FILTER CHIPS -->
    <HorizontalScrollView
        android:id="@+id/scrollFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/searchContainer">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            app:singleSelection="true"
            app:selectionRequired="true">

            <!-- TITLE CHIP -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipTitle"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:checked="true"
                android:textColor="@color/selector_chip_text"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeWidth="0dp"/>
            <!-- chipStrokeWidth=0dp removes the default border line for a cleaner look -->

            <!-- YEAR CHIP -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipYear"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textColor="@color/selector_chip_text"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeWidth="0dp"/>

            <!-- GENRE CHIP -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipGenre"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textColor="@color/selector_chip_text"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeWidth="0dp"/>

            <!-- DIRECTOR CHIP -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipDirector"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Director"
                android:textColor="@color/selector_chip_text"
                app:chipBackgroundColor="@color/selector_chip_background"
                app:chipStrokeWidth="0dp"/>


        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- 3. MOVIE GRID -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMovies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/scrollFilters"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_movie_grid"/>

    <!-- 4. LOADING SPINNER -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 5. ERROR TEXT -->
    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No results found"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>