<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <!-- TOP HEADER: Question Count & Score -->
    <TextView
        android:id="@+id/tvQuestionCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1/10"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textColor="#FFD700"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TIMER BAR -->
    <ProgressBar
        android:id="@+id/progressTimer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="12dp"
        android:progressDrawable="@drawable/bg_timer_progress"
        android:max="100"
        android:progress="100"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionCount" />

    <!-- QUESTION CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#1E1E1E"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/progressTimer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Optional Image for Poster Questions -->
            <ImageView
                android:id="@+id/ivQuestionImage"
                android:layout_width="150dp"
                android:layout_height="225dp"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                tools:src="@android:drawable/ic_menu_gallery"/>

            <TextView
                android:id="@+id/tvQuestionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading Question..."
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ANSWER OPTIONS -->
    <LinearLayout
        android:id="@+id/layoutOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/cardQuestion">

        <Button
            android:id="@+id/btnOption1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Option 1"
            android:textColor="@color/white"
            app:strokeColor="#6200EE"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnOption2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Option 2"
            android:textColor="@color/white"
            app:strokeColor="#6200EE"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnOption3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Option 3"
            android:textColor="@color/white"
            app:strokeColor="#6200EE"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnOption4"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Option 4"
            android:textColor="@color/white"
            app:strokeColor="#6200EE"/>
    </LinearLayout>

    <!-- LOADING SPINNER -->
    <ProgressBar
        android:id="@+id/progressBarQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>