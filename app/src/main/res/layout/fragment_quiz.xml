<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:animateLayoutChanges="true">

    <!-- ======================================== -->
    <!-- CONTAINER 1: LIST SELECTION (Unchanged)  -->
    <!-- ======================================== -->
    <LinearLayout
        android:id="@+id/containerSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="visible">

        <!-- HEADER ICON -->
        <ImageView
            android:id="@+id/ivQuizHeaderIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_help"
            app:tint="?attr/colorPrimary"
            android:background="@drawable/bg_circle_gradient"
            android:padding="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"/>

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a Quiz"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a watchlist to challenge yourself."
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginBottom="48dp"/>

        <!-- LIST OF WATCHLISTS -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvQuizLists"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layoutAnimation="@anim/item_layout_animation"
            tools:listitem="@layout/item_quiz_list"/>
    </LinearLayout>

    <!-- ======================================== -->
    <!-- CONTAINER 2: GAME LOOP (NOW SCROLLABLE)  -->
    <!-- ======================================== -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/containerGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- TOP HEADER: Question Count -->
            <TextView
                android:id="@+id/tvQuestionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1/10"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- TOP HEADER: Score -->
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textColor="#FFD700"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- TIMER BAR -->
            <ProgressBar
                android:id="@+id/progressTimer"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                android:progressDrawable="@drawable/bg_timer_progress"
                android:max="100"
                android:progress="100"
                app:layout_constraintTop_toBottomOf="@id/tvQuestionCount" />

            <!-- QUESTION CARD -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/progressTimer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <!-- Optional Image for Poster Questions -->
                    <ImageView
                        android:id="@+id/ivQuestionImage"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:visibility="gone"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="16dp"/>

                    <!-- Question Text -->
                    <TextView
                        android:id="@+id/tvQuestionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ANSWER OPTIONS CONTAINER -->
            <LinearLayout
                android:id="@+id/layoutOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:paddingBottom="32dp"
                app:layout_constraintTop_toBottomOf="@id/cardQuestion"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btnOption1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Option 1"
                    android:textColor="?android:attr/textColorPrimary"
                    app:strokeColor="?attr/colorPrimary"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnOption2"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Option 2"
                    android:textColor="?android:attr/textColorPrimary"
                    app:strokeColor="?attr/colorPrimary"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnOption3"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Option 3"
                    android:textColor="?android:attr/textColorPrimary"
                    app:strokeColor="?attr/colorPrimary"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnOption4"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Option 4"
                    android:textColor="?android:attr/textColorPrimary"
                    app:strokeColor="?attr/colorPrimary"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- GLOBAL LOADING SPINNER (Centered) -->
    <ProgressBar
        android:id="@+id/progressBarQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>