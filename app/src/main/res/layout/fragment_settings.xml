<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:padding="24dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <!-- Theme Switch Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_input_glass"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_day"
            app:tint="?android:attr/textColorPrimary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dark Mode"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:layout_marginStart="16dp"/>

        <!-- THE SWITCH -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:thumbTint="?attr/colorSurface"
            app:trackTint="#6200EE"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle to switch between Light and Dark themes."
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

    <!-- Space to push button down (Optional) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- DYNAMIC AUTH BUTTON (Log In / Log Out) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAuthAction"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Log Out"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:elevation="6dp"

        android:textColor="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"

        android:layout_marginBottom="16dp"/>

</LinearLayout>