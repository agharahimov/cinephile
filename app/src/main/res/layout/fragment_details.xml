<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- HEADER IMAGE CONTAINER -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Large Poster -->
            <ImageView
                android:id="@+id/ivDetailPoster"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"/>

            <!-- Dark Gradient at bottom for text -->
            <View
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="#99000000" />

            <!-- BACK BUTTON (Top Left) -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="#80000000"
                app:tint="@color/white"
                android:padding="12dp"/>
        </FrameLayout>

        <!-- INFO SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="-60dp"> <!-- Pull text up over image -->

            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDetailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- RATING SYSTEM -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textColor="#888888"
                android:textSize="12sp"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="0"
                style="?android:attr/ratingBarStyleIndicator"
                android:progressTint="#FFD700"
                android:layout_marginBottom="24dp"/>

            <!-- ACTION BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="24dp">

                <!-- Favorite -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Favorite"
                    android:layout_marginEnd="8dp"
                    app:icon="@android:drawable/btn_star"
                    app:iconTint="@color/white"
                    app:backgroundTint="#333333"
                    app:cornerRadius="12dp"/>

                <!-- Watchlist -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWatchlist"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Watchlist"
                    android:layout_marginStart="8dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="@color/white"
                    app:backgroundTint="#6200EE"
                    app:cornerRadius="12dp"/>
            </LinearLayout>

            <!-- SYNOPSIS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synopsis and Crew"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvDetailOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="#DDDDDD"
                android:lineSpacingExtra="4dp"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>