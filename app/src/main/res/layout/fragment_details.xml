<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- 1. SCROLLABLE CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomActionContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- BACKDROP IMAGE (Top Header) -->
            <ImageView
                android:id="@+id/ivBackdrop"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:alpha="0.7"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Gradient Overlay (Crucial for text visibility) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_gradient_black_bottom"
                app:layout_constraintBottom_toBottomOf="@id/ivBackdrop" />

            <!-- SMALL POSTER (Floating on Right) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPoster"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:layout_constraintBottom_toBottomOf="@id/ivBackdrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivBackdrop">

                <ImageView
                    android:id="@+id/ivSmallPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery" />
            </androidx.cardview.widget.CardView>

            <!-- TITLE -->
            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:text="Movie Title"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/cardPoster"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivBackdrop" />

            <!-- YEAR / DIRECTOR -->
            <TextView
                android:id="@+id/tvDetailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025 â€¢ Directed by..."
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/tvDetailTitle"
                app:layout_constraintTop_toBottomOf="@id/tvDetailTitle" />

            <!-- RATING (TMDB) -->
            <TextView
                android:id="@+id/tvRatingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TMDB: 7.8"
                android:textColor="#FFD700"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/tvDetailTitle"
                app:layout_constraintTop_toBottomOf="@id/tvDetailDate" />

            <!-- TRAILER BUTTON (Fixed Alignment) -->
            <!-- Moved to be BELOW the Rating, aligned LEFT -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTrailer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Trailer"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:icon="@android:drawable/ic_media_play"
                app:iconTint="?attr/colorOnPrimary"
                app:iconSize="16dp"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="20dp"
                app:layout_constraintStart_toStartOf="@id/tvDetailTitle"
                app:layout_constraintTop_toBottomOf="@id/tvRatingText" />
            <!-- Using theme colors (Purple) instead of hardcoded white for better visibility -->

            <!-- SYNOPSIS -->
            <TextView
                android:id="@+id/tvDetailOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:lineSpacingExtra="6dp"
                android:text="..."
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/btnTrailer"
                tools:layout_editor_absoluteX="24dp" /> <!-- Pushed down by Trailer button -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BACK BUTTON -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_revert"
        android:background="@android:color/transparent"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- BOTTOM TRIGGER BAR -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomActionContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal">

            <!-- LOGO (Tinted for Theme) -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/logo_white"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                app:tint="?android:attr/textColorSecondary"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rate, log, review, add to list..."
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_more"
                app:tint="?android:attr/textColorSecondary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>